  {
    url: "/frontend-mentor-practice/practice/sunnyside-agency-landing-page",
    title: "Sunnyside Agency Landing Page",
    image: "/frontend-mentor-practice/images/sunnyside-241223-124223.png",
    tags: ["HTML", "CSS", "JavaScript"],
  },
  {
    url: "/frontend-mentor-practice/practice/clipboard-landing-page",
    title: "Clipboard Landing Page",
    image: "/frontend-mentor-practice/images/clipboard-241230-023543.png",
    tags: ["HTML", "CSS"],
  },
  {
    url: "/frontend-mentor-practice/practice/easybank-landing-page",
