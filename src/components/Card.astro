---
const { url, title, image } = Astro.props;
---

<div class="card">
  <img src={image} alt={title} class="card-image" />
  <div class="card-content">
    <h3 class="card-title">
      <a href={url}>{title}</a>
    </h3>
  </div>
</div>

<style>
  .card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 300px;
    margin: 16px;
    transition: transform 0.3s ease;
    /* 卡片高度由內部元素決定，無需設定固定高度 */
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .card-image {
    width: 100%;
    height: auto;  /* 圖片高度自動調整，保持比例 */
  }

  .card-content {
    padding: 16px;
  }

  .card-title a {
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: bold;
    color: #333;
  }

  .card-title a:hover {
    color: #0070f3;
  }

  @media (max-width: 1200px) {
    .card {
      max-width: 250px;
    }
  }

  @media (max-width: 768px) {
    .card {
      max-width: 100%;
      margin: 8px 0;
    }
    .card-title a {
      font-size: 1.125rem;
    }
  }

  @media (max-width: 480px) {
    .card {
      max-width: 100%;
      margin: 8px 0;
    }
    .card-title a {
      font-size: 1rem;
    }
  }
</style>