---
const { url, title, image, tags = [] } = Astro.props;
---

<!-- Content -->
<a href={url} class="card">
  <img src={image} alt={title} class="card-image" />
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    <!-- 顯示 Tags -->
    <div class="card-tags">
      {
        tags.map((tag: any, index: any) => (
          <span key={index} class="tag">
            {tag}
          </span>
        ))
      }
    </div>
  </div>
</a>

<!-- Style -->
<style>
  .card {
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease;
    padding: 10px;
  }

  .card::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 1px solid transparent;
    border-radius: 0px;
    transition: border-color 0.3s ease;
    pointer-events: none;
  }

  .card:hover {
    color: var(--blue);
    /* transform: scale(1.05); */
  }

  .card:hover::after {
    border-color: var(--light-grey);
  }

  .card-image {
    width: 100%;
    height: auto;
    filter: grayscale(100%);
    transition: filter 0.3s ease;
  }

  .card:hover .card-image {
    filter: grayscale(0%);
  }

  .card-content {
    padding: 1rem;
  }

  .card-title {
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .card-tags {
    margin-top: 8px;
  }

  .tag {
    display: inline-flex;
    flex-wrap: wrap;
    background-color: var(--light-grey);
    margin: 2px;
    padding: 4px 8px;
    font-size: 0.8rem;
    color: var(--dark-grey);
  }

  .tag:hover {
    background-color: var(--blue);
    color: var(--white);
  }

  @media (max-width: 768px) {
    .card {
      margin: 8px 0;
    }
    .card-title {
      font-size: 1.125rem;
    }
  }

  @media (max-width: 480px) {
    .card {
      margin: 8px 0;
    }
    .card-title {
      font-size: 1rem;
    }
  }
</style>
